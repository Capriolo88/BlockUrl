{
  "manifest_version": 2,

  "name": "URL Block",
  "description": "",
  "version": "1.0",
  "options_page": "options.html",

  "permissions": ["tabs", 
				  "storage", 
				  "webNavigation", 
				  "webRequest", 
				  "*://*/*"],
  "background":{
		"scripts": ["lib/jquery.js",
					"lib/q.js",
					"lib/class.js",
					"lib/request.js",
					"load.js",
					"background.js"],
		"persistent": true},

  "browser_action": {
    	"default_icon": "img/icon.png"
  }
}
